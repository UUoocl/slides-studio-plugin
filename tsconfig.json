{
  "compilerOptions": {
    // "outDir": "./build",
    "outDir": "./",
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es2022",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "importHelpers": true,
    "lib": [
      "DOM",
      "es2022"
    ],
        "types": [
            "node",
            "obsidian-typings"
        ]
    },
    "exclude": [
        "node_modules",
        "docs",
        "build"
    ],
  "include": [
    "**/*.ts"
  ]
}
